@using Microsoft.AspNet.Identity;
@model IEnumerable<GroupFinderCapstone.Models.GMRating>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RatingTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player.Username)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Comment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RatingTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Player.Username)
    </td>
    <td>
        @if (User.Identity.GetUserId() == item.PlayerID)
        {
            @Html.ActionLink("Edit", "Edit", new { id = item.RatingID })
            @Html.ActionLink("Delete", "Delete", new { id = item.RatingID })
        }

        |
        @*Html.ActionLink("Details", "Details", new { id = item.RatingID }) |*@

    </td>
</tr>
    }

</table>
