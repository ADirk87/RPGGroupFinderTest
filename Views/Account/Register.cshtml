@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        function ToggleShowType() {
            if ($("#IsGM").is(":checked")) {
                $("#PreferredTypeDiv").hide()
            }
            else {
                $("#PreferredTypeDiv").show()
            }
        }
        $(document).ready(() => ToggleShowType())
        $("#IsGM").on("change", () => ToggleShowType())

        </script>

