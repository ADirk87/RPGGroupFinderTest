@using Microsoft.AspNet.Identity;
@model IEnumerable<GroupFinderCapstone.Models.PlayerSignup>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.EventID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Player.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentPlayer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentGM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Player.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommentGM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
                <label>&nbsp;</label>
            </td>
            <td>
                @if (User.Identity.GetUserId() == item.Event.HostID)
                {
                    @Html.ActionLink("Approve/Deny", "Edit", new { id = item.SignupID })
                }
                

            </td>
        </tr>
    }

</table>
